# ================================
#  Gateway Routes Configuration
#  (Make sure lb:// matches the exact spring.application.name of your microservices)
# ================================
# --- Microservice: Currency Exchange ---
spring.cloud.gateway.routes[0].id=currency-exchange
spring.cloud.gateway.routes[0].uri=lb://MicroserviceCurrencyExchange
spring.cloud.gateway.routes[0].predicates[0]=Path=/MicroserviceCurrencyExchange/**,/currency-exchange/**

# --- Microservice: Currency Conversion ---
spring.cloud.gateway.routes[1].id=currency-conversion
spring.cloud.gateway.routes[1].uri=lb://MichroserviceCurrencyConversion
spring.cloud.gateway.routes[1].predicates[0]=Path=/MichroserviceCurrencyConversion/**,/currency-conversion/**

# ================================
#  Spring Boot Admin Client
# ================================
spring.boot.admin.client.url=http://localhost:7777
management.endpoints.web.exposure.include=*
management.endpoint.health.show-details=always

