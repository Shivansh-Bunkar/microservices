@GetMapping("/from/{from}/to/{to}")
public ResponseEntity<CurrencyExchange> retrieveExhangeValue(@PathVariable String from,
												 	 	 	@PathVariable String to )
{
	CurrencyExchange exchangeobject = currencyExchangeRepository.getExchangeValue(from,to) ;
	if(exchangeobject!=null) {
		
		return ResponseEntity.status(HttpStatus.OK)
				.header("info", "data fetched successfully")
				.body(exchangeobject);
	}
		
	else {
		return ResponseEntity.status(HttpStatus.NOT_FOUND)
				.header("info", "data retreival fail")
				.body(null);
	}	
		
}

}