package com.sathya.currency.feign;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.sathya.currency.model.CurrencyExchange;

@FeignClient(name = "MICRSERVICESCURRENCYEXCHANGE")  // Must match Eureka service name
public interface FeignClientCode {

    @GetMapping("/api/v1/exchange/from/{from}/to/{to}")
    CurrencyExchange getExchangeRate(@PathVariable("from") String from, 
                                     @PathVariable("to") String to);
}
